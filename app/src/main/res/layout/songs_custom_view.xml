<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dip"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/song_and_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/custom_view_songtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/merriweather"
            android:textColor="@color/purple_900"
            android:textSize="16sp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:scrollbars="none"
            tools:text="Title of the Song" />

        <TextView
            android:id="@+id/custom_view_songartist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_view_songtitle"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/merriweather"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:scrollbars="none"
            android:textColor="@color/purple_900"
            android:textSize="14sp"
            tools:text="Artists Name" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/custom_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_playlist_add_24" />









</LinearLayout>