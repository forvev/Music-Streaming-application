                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:includeFontPadding="false"
                android:textColor="@color/theme_purple_dark"/>

            <TextView
                android:id="@+id/banner_artist"
                android:layout_width="wrap_content"
