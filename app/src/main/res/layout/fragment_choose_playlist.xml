<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/choose_playlist"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="20dp">

    <LinearLayout
        android:id="@+id/rl_search_playlist"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_view"
            android:iconifiedByDefault="false" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_search_playlist"
        android:layout_centerHorizontal="true">


        <ImageButton
            android:id="@id/add_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rl_search_playlist"
            android:padding="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_baseline_add_24"
            android:backgroundTint="@android:color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_playlist"
            android:layout_gravity="center"
            android:textSize="20sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/choose_one_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_new_playlist"
        android:divider="@color/theme_purple_light"
        android:dividerHeight="2dp"
        />

</RelativeLayout>