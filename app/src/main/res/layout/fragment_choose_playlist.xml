<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_playlist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/create_new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">


        <ImageButton
            android:id="@id/add_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_baseline_add_24"
            android:backgroundTint="@android:color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_playlist"
            android:layout_gravity="center"
            android:textSize="20sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/choose_one_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_new_playlist"
        android:layout_above="@+id/save_playlist"
        android:divider="@color/theme_purple_light"
        android:dividerHeight="2dp"
        />

    <Button
        android:id="@+id/save_playlist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/save"
        android:layout_marginTop="8dp"/>

</RelativeLayout>