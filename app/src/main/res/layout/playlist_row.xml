<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_playlist_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/playlist_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_more_horiz_24"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:backgroundTint="@android:color/transparent"/>


    <LinearLayout
        android:id="@+id/ll_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playlist_menu"
        android:layout_alignTop="@+id/playlist_menu"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/playlist_menu"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/default_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_baseline_push_pin_24"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist 1"
            android:textSize="25sp" />

    </LinearLayout>






</RelativeLayout>
